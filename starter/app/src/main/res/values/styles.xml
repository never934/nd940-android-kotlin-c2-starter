<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="headlineStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/big_size</item>
    </style>

    <style name="parameterStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/medium_size</item>
    </style>

    <style name="progressWheelStyle">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTint">@android:color/white</item>
        <item name="android:visibility">gone</item>
    </style>

</resources>
